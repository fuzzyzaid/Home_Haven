@model Home_Haven.Models.Product

<h2>Delete Product</h2>

<p>Are you sure you want to delete this product?</p>
<div>
    <dl class="row">
        <dt class="col-sm-2">Product ID</dt>
        <dd class="col-sm-10">@Model.ProductID</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
    </dl>

    <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.ProductID">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
